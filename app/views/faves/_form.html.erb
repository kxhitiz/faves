<%= form_for @fave, :url => user_faves_path(current_user) do |f| %>
  <h4>
    <%= content_for?(:title) ? yield(:title) : 'Add favorite' %>
  </h4>
  <div class="line">

  </div>
  <div >
    <div class="">
      <%= f.text_field :url,class:'input-xlarge',placeholder:'Enter url' %>
      <br />

      <%= f.text_area :description,size:"5x5",placeholder:'Describe it' %>
      <br />

      <%= f.submit "Add", :class => "btn btn-primary" %>
    </div>
  </div>
<% end %>
