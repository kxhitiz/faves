<% if @user.errors.any? %>
  <div id="error_container">
    <div class="alert alert-error">
      <%= pluralize(@user.errors.count,'error') %>: 
      <ul>
        <% @user.errors.full_messages.each do |msg| %>
          <li class='error-item'><%= msg %></li>
        <% end %>
      </ul>
      
    </div>
    
  </div>
<% end %>
