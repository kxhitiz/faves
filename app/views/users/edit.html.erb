<%= content_for(:title,'Edit profile') %>
<div class="row">
  <div class="span6 ">
    <h1>Edit profile</h1>

    <%= render 'shared/flash_message' %>

    <%= form_for @user do |f| %>
      <%= f.label :name, '' %>
      <%= f.text_field :name %>

      <%= f.label :email, '' %>
      <%= f.text_field :email %>

      <%= f.label :password, '' %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, '' %>
      <%= f.password_field :password_confirmation %>
      <br />

      <%= f.submit "Update profile",class:'btn btn-primary btn-large' %>
    <% end %>
    
  </div>
  
</div>
